</html>
<script>
    function PopupMessage(_status,message) {
        var logoSVG='';
        $("#messageText").html(message);
        switch (_status) {
            case 0:
                $("#messageStatus").text("Information");
                logoSVG = '<svg class="info-exclamation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><line class="exclamation__line" x1="26" y1="10" x2="26" y2="22" fill="none" /><circle class="exclamation__check" fill="none" cx="26" cy="30" r="2" /></svg>';
                 break;
            case 1:
                $("#messageStatus").text("Error");
                logoSVG = '<svg class="exclamation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><line class="exclamation__line" x1="26" y1="10" x2="26" y2="22" fill="none" /><circle class="exclamation__check" fill="none" cx="26" cy="30" r="2" /></svg>';
                break;
            case 2:
                $("#messageStatus").text("Success");
                logoSVG= '<svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/> <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/></svg>';
                break;
            case 3:
                $("#messageStatus").text("Warning");
                logoSVG = '<svg class="exclamation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><line class="exclamation__line" x1="26" y1="10" x2="26" y2="22" fill="none" /><circle class="exclamation__check" fill="none" cx="26" cy="30" r="2" /></svg>';
                break;
        }
        $("#alertModel .wrapper").html(logoSVG);
 
        $("#alertModel").modal("show");
    }
</script>