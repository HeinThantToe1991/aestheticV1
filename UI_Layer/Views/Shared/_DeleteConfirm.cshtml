@using UI_Layer.Services
@inject LanguageService Language
@model UI_Layer.Models.DeleteConfirmViewModel
@using (Html.BeginForm("Delete", "General", FormMethod.Post, new { onsubmit = "return Delete(this)" }))
{
    <div id="DeleteModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header alert alert-danger">
                    <h4 class="modal-title" id="myModalLabel">@Language.Getkey("MB00004")</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3>@Language.Getkey("MC00001")</h3>
                    <div class="form-group" style="display:none">
                        @Html.EditorFor(model => model.ItemId, new { htmlAttributes = new { @id = "txtDeleteCodeId" } })
                        @Html.ValidationMessageFor(model => model.ItemId)
                    </div>
                    <div class="form-group" style="display:none">
                        @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @id = "txtDeleteName" } })
                        @Html.ValidationMessageFor(model => model.ItemName)
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" id="btnDelete" class="btn btn-danger submit" value="@Language.Getkey("MB00004")">
                    <input type="button" class="btn btn-secondary " data-dismiss="modal" value="@Language.Getkey("MB00003")">
                </div>
            </div>
        </div>
    </div>
}