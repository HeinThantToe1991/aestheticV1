@using UI_Layer.Services
<!DOCTYPE html>
<html lang="en">
@inject LanguageService Language
@{
    ViewData["Title"] = "Log In";
    Layout = "/Views/Shared/_BackendLoginLayout.cshtml";

}
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Bootstrap 5 404 page with image</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
</head>

<body>
@using (Html.BeginForm("Login", "Account", new { area = "BackendSystem" }, FormMethod.Get, null, new { @class = "form-horizontal", role = "form", id = "quickForm", novalidate = "novalidate", enctype = "multipart/form-data", @style = "width:100%" }))
{
    <div class="d-flex align-items-center justify-content-center ">
        <div class="text-center row">
            @*  <div class=" col-md-6">
            <img src="https://cdn.pixabay.com/photo/2017/03/09/12/31/error-2129569__340.jpg" alt=""
                 class="img-fluid">
        </div>*@
            <div class=" col-md-12 mt-12">
                <p>

                    <h3>
                        <span class="text-danger" style="font-weight:bold">Opps!</span> Waiting...
                    </h3>
                </p>
                <p class="lead">
                    @Language.Getkey("MI00027")
                </p>
                @*    <a href="index.html" class="btn btn-primary">Go Home</a>*@
                <div class="text-center mb-6">
                    <button type="submit" class="btn" style="width: 100%">Log in</button>
                </div>
            </div>

        </div>
    </div>
}
</body>

</html>
