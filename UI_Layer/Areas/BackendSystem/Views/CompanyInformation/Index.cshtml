    var MV00082 = "@Language.Getkey("MV00082")";
    var MV00083 = "@Language.Getkey("MV00083")";
    var MV00091 = "@Language.Getkey("MV00091")";
    var MV00080 = "@Language.Getkey("MV00080")";
