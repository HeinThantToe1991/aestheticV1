@using (Html.BeginForm("CustomerInfoReport", "Customer", FormMethod.Post, new { onsubmit = "return CustomerInformation(this);", id = "ReportForm", novalidate = "novalidate" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Customer Information</h3>
                    <a href="#addModal" class="btn btn-success Button100Px" data-toggle="modal" style="margin-top: -5px;margin-bottom: -5px;margin-left: 10px;"><i class="fa fa-plus"></i> @Language.Getkey("MB00008")</a>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body scrollable-div">
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label class="control-label" for="ddFilter">Date Type</label>
                                <select class="form-control select2" style="width: 100%;" id="ddFilter" placeholder="Date">
                                    <option value="CreatedDate">Created Date</option>
                                    <option value="Book">Booking Date</option>
                                    <option value="Appointment">Appointment Date</option>
                                    <option value="Birth">Birth Date</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group" style="padding-left:40px">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="rdoBetween" name="Between" checked="" disabled>
                                    <label for="rdoBetween" class="custom-control-label">Between</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="input-group date" id="txtFromDate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#txtFromDate" placeholder="FROM DD/MM/YYYY" name="txtFromDate" />
                                    <label class="control-label" for="txtFromDate">From</label>
                                    <div class="input-group-append" data-target="#txtFromDate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <div class="input-group date" id="txtToDate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#txtToDate" placeholder="TO DD/MM/YYYY" name="txtToDate" />
                                    <label class="control-label" for="txtToDate">To</label>
                                    <div class="input-group-append" data-target="#txtToDate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <select class="form-control select2" style="width: 100%;" id="ddFilter1" placeholder="Choose One">
                                    <option value="Name">Name</option>
                                    <option value="Email">Email</option>
                                    <option value="Phone">Phone Number</option>
                                    <option value="Address">Address</option>
                                </select>
                                <label class="control-label" for="ddFilter">Search By</label>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group" style="padding-left:40px">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="rdoContain" value="Contain" name="FilterEquation" checked="">
                                    <label for="rdoContain" class="custom-control-label">Contain</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="rdoEqual" value="Equal" name="FilterEquation">
                                    <label for="rdoEqual" class="custom-control-label">Equal</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <textarea class="form-control" rows="2" id="txtFilter1" name="txtFilter1"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group ">
                                @*<div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="rdoContain" name="FilterType" checked="">
                                    <label for="rdoContain" class="custom-control-label">Contain</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" type="radio" id="rdoEqual" name="FilterType">
                                    <label for="rdoEqual" class="custom-control-label">Equal</label>
                                </div>*@
                            </div>
                        </div>
                        <div class="col-1">
                        </div>
                        <div class="col-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <div class="form-group">
                                <label>Medical History</label>
                                </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <input type="checkbox" name="my-checkbox" checked data-bootstrap-switch data-off-color="danger" data-on-color="success">
                            </div>
                        </div>
                        <div class="col-1">
                        </div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                        </div>
                        <div class="col-6">
                            <div class="form-group" style="float:right">
                                <button type="submit" class="btn btn-success pull-left Button100Px" title="Search" style="width:130px;">
                                    <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i> @Language.Getkey("MB00006")</span>
                                </button>
                                <button type="button" class="btn btn-secondary" title="Cancel" style="width:130px;" onclick="cancelClick();">
                                    <span class="input-group-addon"><i class="fa fa-brush" aria-hidden="true"></i> @Language.Getkey("MB00003")</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@using (Html.BeginForm("Add", "Customer", FormMethod.Post, new { onsubmit = "return Add(this)", id = "addForm", novalidate = "novalidate" }))
{
    <div id="addModal" class="modal fade" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form>
                    <div class="modal-header alert alert-success">
                        <h4 class="modal-title" id="myModalLabel">@Language.Getkey("MB00008")</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="custom-file">
                                        @Html.TextBoxFor(model => model.UserImage, new { @class = "custom-file-input", id = "imgfile", Type = "file", onchange = "loadFile(event)" })
                                        @Html.LabelFor(model => model.UserImage, "Choose Image", new { id = "customfile", @class = "custom-file-label" })
                                        @Html.ValidationMessageFor(model => model.UserImage)
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.CustomerName, new { @class = "form-control", @placeholder = @Language.Getkey("ML00013"), @style = "text-transform:uppercase" })
                                    @Html.LabelFor(model => model.CustomerName, @Language.Getkey("ML00013"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.CustomerName)
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = @Language.Getkey("ML00194"), @style = "text-transform:uppercase" })
                                    @Html.LabelFor(model => model.FullName, @Language.Getkey("ML00194"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.FullName)
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group text-center">
                                    <div class="custom-file">
                                        <img id="output" width="200" src="/images/atom.PNG" name="UserImage" style="vertical-align: inherit;max-width:10vh;max-height:10vh"/>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <div class="form-group ">
                                    <select class="form-control form-control-md" style="width: 100%;height:auto" id="Gender" name="Gender">
                                    </select>
                                    @*@Html.LabelFor(model => model.Gender, @Language.Getkey("ML00051"), new { @class = "control-label" })*@
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Day, new { @class = "form-control", @placeholder = @Language.Getkey("ML00203"), type = "number", min = "1", max = "31" })
                                    @Html.LabelFor(model => model.Day, @Language.Getkey("ML00206"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Day)
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Month, new { @class = "form-control", @placeholder = @Language.Getkey("ML00204"), type = "number", min = "1", max = "12" })
                                    @Html.LabelFor(model => model.Month, @Language.Getkey("ML00207"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Month)
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Year, new { @class = "form-control", @placeholder = @Language.Getkey("ML00205"), type = "number", min = "1900", max = "9999" })
                                    @Html.LabelFor(model => model.Year, @Language.Getkey("ML00208"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Year)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = @Language.Getkey("ML00141") })
                                    @Html.LabelFor(model => model.Email, @Language.Getkey("ML00141"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control", @Type = "tel", @placeholder = @Language.Getkey("ML00012") })
                                    @Html.LabelFor(model => model.PhoneNo, @Language.Getkey("ML00012"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.PhoneNo)
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <select class="form-control form-control-md" style="width: 100%;height:auto" id="selCustomerTypeId" name="CustomerTypeId">
                                    </select>
                                    @Html.LabelFor(model => model.CustomerTypeId, @Language.Getkey("ML00057"), new { @class = "control-label" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.DivisionId, new { @class = "form-control", @placeholder = @Language.Getkey("ML00049"), @style = "text-transform:uppercase" })
                                    @Html.LabelFor(model => model.DivisionId, @Language.Getkey("ML00049"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.DivisionId)
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.DistrictId, new { @class = "form-control", @placeholder = @Language.Getkey("ML00050"), @style = "text-transform:uppercase" })
                                    @Html.LabelFor(model => model.DistrictId, @Language.Getkey("ML00050"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.DistrictId)
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.TownshipId, new { @class = "form-control", @placeholder = @Language.Getkey("ML00048"), @style = "text-transform:uppercase" })
                                    @Html.LabelFor(model => model.TownshipId, @Language.Getkey("ML00048"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.TownshipId)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @placeholder = @Language.Getkey("ML00025") })
                                    @Html.LabelFor(model => model.Address, @Language.Getkey("ML00025"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group ">
                                    @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", @placeholder = @Language.Getkey("ML00011") })
                                    @Html.LabelFor(model => model.Remark, @Language.Getkey("ML00011"), new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Remark)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success submit" value="@Language.Getkey("MB00001")">
                        <input type="button" class="btn btn-secondary" onclick="clearAddForm()" data-dismiss="modal" value="@Language.Getkey("MB00003")">
                    </div>
                </form>
            </div>
        </div>
    </div>
}
